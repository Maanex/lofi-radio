{
  "name": "lofiradio",
  "productName": "Lofi Radio",
  "version": "1.0.0",
  "description": "Minimalist Lofi Hiphop Radio",
  "main": "build/index.js",
  "scripts": {
    "dev": "npm run build && npm run start",
    "fdev": "copyfiles ./frontend/**/* ./build/frontend/ -u 1 && npm run start",
    "build": "tsc && copyfiles ./frontend/**/* ./build/frontend/ -u 1",
    "start": "electron build/index.js",
    "package": "copyfiles ./package*.json ./package/ && copyfiles ./node_modules/**/* ./package/ && copyfiles ./resources/**/* ./package/ && copyfiles ./frontend/**/* ./package/ && copyfiles ./build/**/* ./package/ && electron-packager ./package --platform=win32 --arch=x64 --overwrite --out=dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Andreas May (@maanex)",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^5.2.0",
    "ts-node": "^8.8.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/electron-store": "^3.2.0",
    "@types/node": "^12.12.47",
    "@types/reflect-metadata": "^0.1.0",
    "electron": "^9.0.4",
    "electron-packager": "^14.2.1",
    "typescript": "^3.9.5"
  }
}
